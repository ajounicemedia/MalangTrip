<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_trip_photo"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/driver_profile" />

    <EditText
        android:id="@+id/et_trip_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="여행 제목"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/et_trip_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="여행 일정"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/et_trip_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="여행 내용"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/et_trip_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="여행 가격"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_resister_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="여행 등록하기" />
</LinearLayout>